{
  "name": "@extenzo/plugin-hmr",
  "version": "0.1.0-alpha.0",
  "description": "Rsbuild plugin: launch browser and HMR in dev (internal)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
