    "@rstest/coverage-istanbul": "^0.2.0",
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@rsbuild/core": ">=1.0.0",
    "@rspack/core": ">=1.0.0"
  },
  "optionalDependencies": {
    "ws": "^8.18.0"
  }
