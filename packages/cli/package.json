{
  "name": "@extenzo/cli",
  "version": "0.1.0-alpha.0",
  "description": "extenzo CLI: extenzo dev / build, parses argv and drives Rsbuild",
  "type": "module",
  "bin": {
    "extenzo": "./dist/cli.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "rslib build",
    "dev": "rslib build --watch",
    "test": "rstest run",
    "test:coverage": "rstest run --coverage"
  },
  "dependencies": {
    "@rsbuild/core": "^1.6.0",
    "@extenzo/core": "workspace:*",
    "archiver": "^7.0.0",
    "@extenzo/plugin-extension-entry": "workspace:*",
    "@extenzo/plugin-extension-manifest": "workspace:*",
    "@extenzo/plugin-extension-hmr": "workspace:*",
    "@extenzo/plugin-extension-monitor": "workspace:*",
    "@extenzo/plugin-vue": "workspace:*",
    "@rsbuild/plugin-babel": "^1.0.6",
    "@rsbuild/plugin-vue": "^1.2.0",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/compiler-sfc": "^3.2.47"
  },
  "devDependencies": {
    "@rslib/core": "^0.19.0",
    "@rstest/core": "^0.8.1",
    "@rstest/coverage-istanbul": "^0.2.0",
    "@types/archiver": "^6.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@rsbuild/core": ">=1.0.0"
  }
}
